{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "shim-vue.d.ts",
    "components/**/*.ts",
    "components/**/*.vue",
    "storybook/**/*.ts",
    "examples/**/*.ts",
    "examples/**/*.vue"
  ],
  "exclude": ["**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
